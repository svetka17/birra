<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/tvId_Prod_"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:background="@drawable/edittext_style"
        android:gravity="center_vertical"
        android:text="id"
        android:textSize="20sp"
        android:textStyle="bold" />

    <CheckBox
        android:id="@+id/tvVisProd_"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:editable="false"
        android:focusable="false"
        android:clickable="false"
        android:focusableInTouchMode="false"
        android:background="@drawable/edittext_style"
        android:gravity="center_vertical" >
    </CheckBox>

    <TextView
        android:id="@+id/tvName_Prod_"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:background="@drawable/edittext_style"
        android:gravity="center_vertical"
        android:text="name"
        android:textSize="18sp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/tvName_Pgr_Prod_"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:background="@drawable/edittext_style"
        android:gravity="center_vertical"
        android:text="name"
        android:textSize="18sp"
        android:textStyle="italic" />

    <CheckBox
        android:id="@+id/tvTaraOkProd_"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:editable="false"
        android:focusableInTouchMode="false"
        android:clickable="false"
        android:focusable="false"
        android:background="@drawable/edittext_style"
        android:gravity="center_vertical" >
    </CheckBox>

    <TextView
        android:id="@+id/tvTaraProd_"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:background="@drawable/edittext_style"
        android:gravity="center_vertical"
        android:text="name"
        android:textSize="18sp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/tvPriceProd_"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:background="@drawable/edittext_style"
        android:gravity="center_vertical"
        android:text="name"
        android:textSize="18sp"
        android:textStyle="italic" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="0"
        android:background="@drawable/edittext_style"
        android:orientation="vertical" >

        <Button
            android:id="@+id/btn_Upd_Prod"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical|fill_horizontal"
            android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal"
            android:text="ИЗМЕНИТЬ" />

        <Button
            android:id="@+id/btn_Del_Prod"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal"
            android:text="УДАЛИТЬ" />
    </LinearLayout>

</LinearLayout>