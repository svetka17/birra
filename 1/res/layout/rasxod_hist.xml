<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:orientation="horizontal" >

 		<TextView
 		    android:id="@+id/tv_Id_PgrRasHist"
 		    android:layout_width="wrap_content"
 		    android:layout_height="wrap_content"
 		    android:visibility="invisible"
 		    android:layout_weight="0" />
                
                <Spinner
                    android:id="@+id/sp_Pgr_RasHist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0" />
         <TextView
 		    android:text="    ДАТА ПРОДАЖИ     "
 		    android:layout_width="wrap_content"
 		    android:layout_height="wrap_content"
 		    android:editable="false"
 		    android:layout_weight="0" />
         <TextView
 		    android:id="@+id/tv_Data_RasHist"
 		    android:layout_width="wrap_content"
 		    android:layout_height="wrap_content"
 		    android:editable="true"
 		    android:focusableInTouchMode="true"
 		    android:layout_weight="0" />
		<TextView
 		    android:text="    ЧЕКИ  "
 		    android:layout_width="wrap_content"
 		    android:layout_height="wrap_content"
 		    android:editable="false"
 		    android:layout_weight="0" />
		<TextView
 		    android:id="@+id/tv_Id_KlientRasHist"
 		    android:layout_width="wrap_content"
 		    android:layout_height="wrap_content"
 		    android:visibility="invisible"
 		    android:layout_weight="0" />
                
                <Spinner
                    android:id="@+id/sp_Klient_RasHist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/llHRasxodHist"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

 		<TextView
 		    android:id="@+id/tvHR1"
 		    android:layout_width="10px"
 		    android:layout_height="match_parent"
 		    android:background="@drawable/edittexth_style"
 		    android:gravity="center_vertical|center_horizontal"
 		    android:text="НОМЕР ТОВАРА"/>
 		<TextView
 		    android:id="@+id/tvHR2"
 		    android:layout_width="10dp"
 		    android:layout_height="match_parent"
 		    android:background="@drawable/edittexth_style"
 		    android:gravity="center_vertical|center_horizontal"
 		    android:text="НАИМЕНОВАНИЕ"/>

<TextView
 		    android:id="@+id/tvHR3"
 		    android:layout_width="10dp"
 		    android:layout_height="match_parent"
 		    android:background="@drawable/edittexth_style"
 		    android:gravity="center_vertical|center_horizontal"
 		    android:text="КОЛ"/>

<TextView
 		    android:id="@+id/tvHR4"
 		    android:layout_width="10dp"
 		    android:layout_height="match_parent"
 		    android:background="@drawable/edittexth_style"
 		    android:gravity="center_vertical|center_horizontal"
 		    android:text="ЦЕНА"/>

<TextView
 		    android:id="@+id/tvHR5"
 		    android:layout_width="10dp"
 		    android:layout_height="match_parent"
 		    android:background="@drawable/edittexth_style"
 		    android:gravity="center_vertical|center_horizontal"
 		    android:text="ДАТА"/>
<TextView
 		    android:id="@+id/tvHR6"
 		    android:layout_width="10dp"
 		    android:layout_height="match_parent"
 		    android:background="@drawable/edittexth_style"
 		    android:gravity="center_vertical|center_horizontal"
 		    android:text="ПРИМЕЧАНИЕ"/>
<TextView
 		    android:id="@+id/tvHR7"
 		    android:layout_width="10dp"
 		    android:layout_height="match_parent"
 		    android:background="@drawable/edittexth_style"
 		    android:gravity="center_vertical|center_horizontal"
 		    android:text="№ЧЕКА"/>
<TextView
 		    android:id="@+id/tvHR8"
 		    android:layout_width="10dp"
 		    android:layout_height="match_parent"
 		    android:background="@drawable/edittexth_style"
 		    android:gravity="center_vertical|center_horizontal"
 		    android:text="СУММА ЧЕКА"/>

</LinearLayout>
    <ListView
        android:id="@+id/lvRasxodHist"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:orientation="horizontal" >
<!--  
        <Button
            android:id="@+id/btnAddPrixodHist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|fill_vertical|center_horizontal|fill_horizontal|center"
            android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal"
            android:text="ДОБАВИТЬ НОВЫЙ" />
-->
        <Button
            android:id="@+id/btnExitRasxodHist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|fill_vertical|center_horizontal|fill_horizontal|center"
            android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal"
            android:text="НАЗАД" />
    </LinearLayout>

</LinearLayout>
