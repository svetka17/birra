<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/klient_edit_ll"
    android:orientation="vertical" >

            	<LinearLayout
                    android:layout_width="match_parent"
				    android:layout_height="0dp"
				    android:layout_weight="1"
                android:orientation="horizontal" >

				<TextView
				    android:id="@+id/tvEditIdKlient"
				    android:layout_width="wrap_content"
				    android:layout_height="match_parent"
				    android:layout_weight="0" />
				
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="0"
                    style="@style/TV_h"
                    android:text="ИМЯ" />
                
                <EditText
                    android:id="@+id/tvEditNameKlient"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    style="@style/ET_t"
                    android:hint="ВВЕДИТЕ НОВОЕ ИМЯ" >
                    <requestFocus />
                </EditText>
                
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
				    android:layout_height="0dp"
				    android:layout_weight="1"
                android:orientation="horizontal" >
			<TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    style="@style/TV_h"
                    android:text="СКИДКА %" />
                
                <EditText
                    android:id="@+id/tvEditScontoPerKlient"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    style="@style/ET_n"
                    android:hint="ВВЕДИТЕ СКИДКУ В %">
                    <requestFocus />
                </EditText>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    style="@style/TV_h"
                    android:text="СКИДКА ГРН" />
                
                <EditText
                    android:id="@+id/tvEditScontoSumKlient"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    style="@style/ET_n"
                    android:hint="ВВЕДИТЕ СКИДКУ В ГРН">
                    <requestFocus />
                </EditText>	

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
				    android:layout_height="0dp"
				    android:layout_weight="1"
                android:orientation="horizontal" >
				<TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    style="@style/TV_h"
                    android:text="АДРЕС" />
                
                <EditText
                    android:id="@+id/tvEditAdresKlient"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    style="@style/ET_t"
                    android:hint="ВВЕДИТЕ АДРЕС">
                    <requestFocus />
                </EditText>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    style="@style/TV_h"
                    android:text="ТЕЛЕФОН" />
                
                <EditText
                    android:id="@+id/tvEditTelKlient"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    style="@style/ET_t"
                    android:hint="ВВЕДИТЕ ТЕЛЕФОН" >
                    <requestFocus />
                </EditText>
                
            </LinearLayout>
			<LinearLayout
                    android:layout_width="match_parent"
				    android:layout_height="0dp"
				    android:layout_weight="1"
                android:orientation="horizontal" >
				
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    style="@style/TV_h"
                    android:text="ПРИМЕЧАНИЕ" />
                
                <EditText
                    android:id="@+id/tvEditPrimKlient"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    style="@style/ET_t"
                    android:hint="ВВЕДИТЕ ПРИМЕЧАНИЕ">
                    <requestFocus />
                </EditText>
                
            </LinearLayout>
    <LinearLayout
                    style="@style/mw0">

        <Button
            android:id="@+id/btnEditOkKlient"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            style="@style/B"
            android:text="ГОТОВО" />

        <Button
            android:id="@+id/btnEditExitKlient"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            style="@style/B"
            android:text="НАЗАД" />

    </LinearLayout>

</LinearLayout>