    android:orientation="vertical" >

    <LinearLayout
        style="@style/mw0"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/et_Id_PgrProd"
            style="@style/ww0"
            android:visibility="invisible" />

        <Spinner
            android:id="@+id/sp_Pgr_Prod"
