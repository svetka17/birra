        <TextView
            style="@style/lv_h"
            android:layout_weight="1"
            android:text="ЦЕНА ПРОДАЖИ"/>
        <TextView
            style="@style/lv_h"
            android:layout_weight="1"
            android:text="ЕД.ИЗМ"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text=""/>
    </TableRow>
