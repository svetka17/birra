    <LinearLayout
        style="@style/mw0"
        android:orientation="horizontal" >
                
                <Spinner
                    android:id="@+id/sp_Pgr_Otchet"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="0" />
                <TextView
 		    android:id="@+id/tv_Id_PgrOtchet"
 		    android:layout_width="0dp"
    		android:layout_height="match_parent"
    		android:layout_weight="0"
 		    android:visibility="invisible" />

         <TextView
 		    android:text="ПЕРИОД С"
 		    android:id="@+id/tv_otchetD1"
 		    style="@style/TV_h"
 		    android:layout_width="wrap_content"
 		    android:layout_height="match_parent"
 		    android:layout_weight="0" />
         <TextView
 		    android:id="@+id/tv_Data_Otchet"
 		    style="@style/ET_t"
 		    android:layout_width="wrap_content"
 		    android:layout_height="match_parent"
 		    android:layout_weight="0.2"/>
         
         <TextView
             android:id="@+id/tv_otchetD2"
 		    android:text="ПЕРИОД ПО"
 		    style="@style/TV_h"
 		    android:layout_width="wrap_content"
 		    android:layout_height="match_parent"
 		    android:layout_weight="0" />
         <TextView
 		    android:id="@+id/tv_Data2_Otchet"
 		    style="@style/ET_t"
 		    android:layout_width="wrap_content"
 		    android:layout_height="match_parent"
 		    android:layout_weight="0.2"/>
