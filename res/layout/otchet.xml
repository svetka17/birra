    </LinearLayout>

    <TableLayout
            style="@style/mw1"
            android:shrinkColumns="*"
        android:orientation="vertical" >
<TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <Button
            android:id="@+id/btnOborotkaOtchet"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            style="@style/B"
            android:text="ОБОРОТНАЯ ВЕДОМОСТЬ" />
 </TableRow>   
 <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <Button
            android:id="@+id/btnObO"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            style="@style/B"
            android:text="ОСТАТКИ" />
         <Button
            android:id="@+id/btnOO"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            style="@style/B"
            android:text="ОТЧЕТ О РАСХОДЕ (СУММАРНО)" />

 </TableRow>     
 <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <Button
            android:id="@+id/btnPrihodOtchet"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            style="@style/B"
            android:text="ОТЧЕТ О ПРИХОДЕ" />
        <Button
            android:id="@+id/btnRasxodOtchet"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            style="@style/B"
            android:text="ОТЧЕТ О РАСХОДЕ (ПОДРОБНО)" />
 </TableRow> 
    </TableLayout>


    <LinearLayout
            style="@style/mw0"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btnExitOtchet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            style="@style/B"
            android:text="НАЗАД" />
    </LinearLayout>

</LinearLayout>
