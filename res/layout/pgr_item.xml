<?xml version="1.0" encoding="utf-8"?>
<TableRow xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tvIdPgr"
        style="@style/lv_i"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/tvNamePgr"
        style="@style/lv_i"
        android:layout_weight="2" />

    <TextView
        android:id="@+id/tvDataInsPgr"
        style="@style/lv_i"
        android:layout_weight="1"/>

    <LinearLayout
            style="@style/_m1"
        android:orientation="vertical" >

        <Button
            android:id="@+id/btnUpdPgr"
            style="@style/B"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="ИЗМЕНИТЬ"
            android:textAppearance="@style/textB20" />

        <Button
            android:id="@+id/btnDelPgr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            style="@style/B"
            android:textAppearance="@style/textB20"
            android:text="УДАЛИТЬ" />
    </LinearLayout>

    </TableRow>
