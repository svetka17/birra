            <SeekBar
        android:id="@+id/sbRed1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:max="255"
        android:progress="50" />

    <SeekBar
        android:id="@+id/sbGreen1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:max="255"
        android:progress="50" />

    <SeekBar
        android:id="@+id/sbBlue1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:max="255"
        android:progress="50" />

</LinearLayout>